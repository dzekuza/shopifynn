<section class="hero">
  <div class="hero__media">
    {% if section.settings.image %}
      <img
        src="{{ section.settings.image | image_url: width: 1920 }}"
        srcset="
          {{ section.settings.image | image_url: width: 750 }} 750w,
          {{ section.settings.image | image_url: width: 1100 }} 1100w,
          {{ section.settings.image | image_url: width: 1500 }} 1500w,
          {{ section.settings.image | image_url: width: 1920 }} 1920w
        "
        sizes="100vw"
        alt="{{ section.settings.heading | escape }}"
        loading="eager"
        class="hero__image"
      >
    {% else %}
      <div class="hero__placeholder"></div>
    {% endif %}
    <div class="hero__overlay" style="opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }}"></div>
  </div>

  <div class="hero__content container">
    {% if section.settings.subtitle != blank %}
      <p class="hero__subtitle">{{ section.settings.subtitle }}</p>
    {% endif %}
    <h1 class="hero__heading">{{ section.settings.heading }}</h1>
    {% if section.settings.text != blank %}
      <p class="hero__text">{{ section.settings.text }}</p>
    {% endif %}
    {% if section.settings.button_text != blank %}
      <a href="{{ section.settings.button_url }}" class="hero__button button button--primary">
        {{ section.settings.button_text }}
      </a>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Hero Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Background image"
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "min": 0,
      "max": 80,
      "step": 5,
      "default": 30,
      "label": "Overlay opacity (%)"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Handcrafted in Scandinavia"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Nordic Warmth, Crafted for You"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Description",
      "default": "Premium hot and cold tubs designed with Nordic precision and built to last a lifetime."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text",
      "default": "Explore Collection"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button link"
    }
  ],
  "presets": [
    {
      "name": "Hero Banner"
    }
  ]
}
{% endschema %}
