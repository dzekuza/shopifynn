<section class="hero" style="padding-top: {{ section.settings.padding_top }}px; padding-bottom: {{ section.settings.padding_bottom }}px;">
  <div class="hero__media">
    {% if section.settings.video != blank %}
      <video class="hero__video" autoplay muted loop playsinline style="object-fit: {{ section.settings.video_fit }};">
        {% for source in section.settings.video.sources %}
          <source src="{{ source.url }}" type="{{ source.mime_type }}">
        {% endfor %}
      </video>
    {% elsif section.settings.video_url != blank %}
      {% if section.settings.video_url.type == 'youtube' %}
        <iframe class="hero__video" src="https://www.youtube.com/embed/{{ section.settings.video_url.id }}?autoplay=1&mute=1&loop=1&playlist={{ section.settings.video_url.id }}&controls=0&showinfo=0&rel=0&modestbranding=1&playsinline=1" frameborder="0" allow="autoplay; fullscreen" allowfullscreen loading="eager" title="Hero video"></iframe>
      {% elsif section.settings.video_url.type == 'vimeo' %}
        <iframe class="hero__video" src="https://player.vimeo.com/video/{{ section.settings.video_url.id }}?autoplay=1&loop=1&muted=1&background=1" frameborder="0" allow="autoplay; fullscreen" allowfullscreen loading="eager" title="Hero video"></iframe>
      {% endif %}
    {% elsif section.settings.image %}
      <picture>
        {% if section.settings.mobile_image %}
          <source media="(max-width: 749px)" srcset="{{ section.settings.mobile_image | image_url: width: 750 }}">
        {% endif %}
        <img
          src="{{ section.settings.image | image_url: width: 1920 }}"
          srcset="
            {{ section.settings.image | image_url: width: 750 }} 750w,
            {{ section.settings.image | image_url: width: 1100 }} 1100w,
            {{ section.settings.image | image_url: width: 1500 }} 1500w,
            {{ section.settings.image | image_url: width: 1920 }} 1920w
          "
          sizes="100vw"
          alt="{{ section.settings.heading | escape }}"
          loading="eager"
          class="hero__image"
        >
      </picture>
    {% else %}
      <div class="hero__placeholder"></div>
    {% endif %}
    <div class="hero__overlay" style="opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }}"></div>
  </div>

  {%- assign align = section.settings.text_alignment -%}
  <div class="hero__content container" style="text-align: {{ align }}; max-width: {{ section.settings.content_width }}px;{% if align == 'left' %} margin-right: auto;{% elsif align == 'right' %} margin-left: auto;{% else %} margin: 0 auto;{% endif %}">
    {% if section.settings.subtitle != blank %}
      <p class="hero__subtitle">{{ section.settings.subtitle }}</p>
    {% endif %}
    <h1 class="hero__heading" style="{% render 'heading-size-vars', desktop: section.settings.heading_size, mobile: section.settings.heading_size_mobile, scale: 'hero' %}">{{ section.settings.heading }}</h1>
    {% if section.settings.text != blank %}
      <p class="hero__text" style="font-size: {% if section.settings.text_size == 'small' %}0.875rem{% elsif section.settings.text_size == 'large' %}1.25rem{% else %}1.0625rem{% endif %};{% if align == 'center' %} margin-left: auto; margin-right: auto;{% endif %}">{{ section.settings.text }}</p>
    {% endif %}
    {% if section.settings.button_text != blank or section.settings.button_2_text != blank %}
      <div class="hero__buttons" style="justify-content: {% if align == 'right' %}flex-end{% elsif align == 'center' %}center{% else %}flex-start{% endif %};">
        {% if section.settings.button_text != blank %}
          <a href="{{ section.settings.button_url }}" class="hero__button button {% if section.settings.button_style == 'outline' %}button--outline{% else %}button--primary{% endif %}">
            {{ section.settings.button_text }}
          </a>
        {% endif %}
        {% if section.settings.button_2_text != blank %}
          <a href="{{ section.settings.button_2_url }}" class="hero__button button {% if section.settings.button_2_style == 'outline' %}button--outline{% else %}button--primary{% endif %}">
            {{ section.settings.button_2_text }}
          </a>
        {% endif %}
      </div>
    {% endif %}
  </div>
</section>

