<section class="rich-text section {% if section.settings.color_scheme == 'surface' %}section--surface{% elsif section.settings.color_scheme == 'dark' %}section--dark{% endif %}" style="padding-top: {{ section.settings.padding_top }}px; padding-bottom: {{ section.settings.padding_bottom }}px;">
  <div class="container">
    <div class="rich-text__inner" style="text-align: {{ section.settings.text_alignment }}; max-width: {{ section.settings.content_width }}px; margin: 0 auto;">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'subtitle' %}
            <p class="rich-text__subtitle" {{ block.shopify_attributes }}>{{ block.settings.subtitle }}</p>
          {% when 'heading' %}
            <h2 class="rich-text__heading" style="{% render 'heading-size-vars', desktop: block.settings.heading_size, mobile: block.settings.heading_size_mobile %}" {{ block.shopify_attributes }}>{{ block.settings.heading }}</h2>
          {% when 'text' %}
            <div class="rich-text__text rte" style="font-size: {% if block.settings.text_size == 'small' %}0.875rem{% elsif block.settings.text_size == 'large' %}1.25rem{% else %}1rem{% endif %};" {{ block.shopify_attributes }}>{{ block.settings.text }}</div>
          {% when 'image' %}
            <div class="rich-text__image-wrap" {{ block.shopify_attributes }}>
              {% if block.settings.image %}
                <img
                  src="{{ block.settings.image | image_url: width: 1000 }}"
                  srcset="
                    {{ block.settings.image | image_url: width: 500 }} 500w,
                    {{ block.settings.image | image_url: width: 750 }} 750w,
                    {{ block.settings.image | image_url: width: 1000 }} 1000w
                  "
                  sizes="(max-width: 768px) 100vw, {{ section.settings.content_width }}px"
                  alt="{{ block.settings.image_alt | escape | default: 'Section image' }}"
                  loading="lazy"
                  class="rich-text__image"
                  style="max-width: 100%; border-radius: 8px;"
                >
              {% endif %}
            </div>
          {% when 'button' %}
            <div class="rich-text__button-wrap" {{ block.shopify_attributes }}>
              <a href="{{ block.settings.button_url }}" class="button {% if block.settings.button_style == 'primary' %}button--primary{% else %}button--outline{% endif %}">
                {{ block.settings.button_text }}
              </a>
            </div>
        {% endcase %}
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Rich Text",
  "settings": [
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text alignment",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "right", "label": "Right" }
      ],
      "default": "center"
    },
    {
      "type": "range",
      "id": "content_width",
      "label": "Content width",
      "min": 400,
      "max": 1000,
      "step": 50,
      "default": 700,
      "unit": "px"
    },
    {
      "type": "select",
      "id": "color_scheme",
      "label": "Color scheme",
      "options": [
        { "value": "default", "label": "Default" },
        { "value": "surface", "label": "Surface" },
        { "value": "dark", "label": "Dark" }
      ],
      "default": "default"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Top padding",
      "min": 0,
      "max": 100,
      "step": 4,
      "default": 40,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Bottom padding",
      "min": 0,
      "max": 100,
      "step": 4,
      "default": 40,
      "unit": "px"
    }
  ],
  "blocks": [
    {
      "type": "subtitle",
      "name": "Subtitle",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "subtitle",
          "label": "Subtitle",
          "default": "About Us"
        }
      ]
    },
    {
      "type": "heading",
      "name": "Heading",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Our Nordic Heritage"
        },
        {
          "type": "select",
          "id": "heading_size",
          "label": "Heading size",
          "options": [
            { "value": "small", "label": "Small" },
            { "value": "medium", "label": "Medium" },
            { "value": "large", "label": "Large" },
            { "value": "extra_large", "label": "Extra Large" }
          ],
          "default": "medium"
        },
        {
          "type": "select",
          "id": "heading_size_mobile",
          "label": "Heading size (mobile)",
          "options": [
            { "value": "small", "label": "Small" },
            { "value": "medium", "label": "Medium" },
            { "value": "large", "label": "Large" },
            { "value": "extra_large", "label": "Extra large" }
          ],
          "default": "medium"
        }
      ]
    },
    {
      "type": "text",
      "name": "Text",
      "limit": 1,
      "settings": [
        {
          "type": "richtext",
          "id": "text",
          "label": "Text",
          "default": "<p>Founded in the heart of Scandinavia, Aurowe brings the centuries-old Nordic bathing tradition into the modern world. Each tub is crafted with care, precision, and a deep respect for nature.</p>"
        },
        {
          "type": "select",
          "id": "text_size",
          "label": "Text size",
          "options": [
            { "value": "small", "label": "Small" },
            { "value": "medium", "label": "Medium" },
            { "value": "large", "label": "Large" }
          ],
          "default": "medium"
        }
      ]
    },
    {
      "type": "image",
      "name": "Image",
      "limit": 1,
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "image_alt",
          "label": "Image alt text"
        }
      ]
    },
    {
      "type": "button",
      "name": "Button",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "button_text",
          "label": "Button text",
          "default": "Learn More"
        },
        {
          "type": "url",
          "id": "button_url",
          "label": "Button link"
        },
        {
          "type": "select",
          "id": "button_style",
          "label": "Button style",
          "options": [
            { "value": "primary", "label": "Primary" },
            { "value": "outline", "label": "Outline" }
          ],
          "default": "primary"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Rich Text",
      "blocks": [
        { "type": "subtitle" },
        { "type": "heading" },
        { "type": "text" },
        { "type": "button" }
      ]
    }
  ]
}
{% endschema %}
