<section class="featured-collections section {% if section.settings.color_scheme == 'surface' %}section--surface{% elsif section.settings.color_scheme == 'dark' %}section--dark{% endif %}" style="padding-top: {{ section.settings.padding_top }}px; padding-bottom: {{ section.settings.padding_bottom }}px;">
  <div class="container">
    {% if section.settings.heading != blank %}
      <div class="section__header" style="text-align: {{ section.settings.text_alignment }};">
        <h2 class="section__heading" style="{% render 'heading-size-vars', desktop: section.settings.heading_size, mobile: section.settings.heading_size_mobile %}">{{ section.settings.heading }}</h2>
        {% if section.settings.subheading != blank %}
          <p class="section__subheading" style="font-size: {% if section.settings.text_size == 'small' %}0.875rem{% elsif section.settings.text_size == 'large' %}1.125rem{% else %}1rem{% endif %};">{{ section.settings.subheading }}</p>
        {% endif %}
      </div>
    {% endif %}

    <div class="featured-collections__grid featured-collections__grid--{{ section.settings.columns }}" style="gap: {{ section.settings.grid_gap }}px;">
      {% for block in section.blocks %}
        <a href="{{ block.settings.link }}" class="featured-collections__card" {{ block.shopify_attributes }}>
          <div class="featured-collections__image-wrap">
            {% if block.settings.video != blank %}
              <video class="featured-collections__video" autoplay muted loop playsinline style="object-fit: {{ block.settings.video_fit }};">
                {% for source in block.settings.video.sources %}
                  <source src="{{ source.url }}" type="{{ source.mime_type }}">
                {% endfor %}
              </video>
            {% elsif block.settings.image %}
              <img
                src="{{ block.settings.image | image_url: width: 900 }}"
                srcset="
                  {{ block.settings.image | image_url: width: 450 }} 450w,
                  {{ block.settings.image | image_url: width: 700 }} 700w,
                  {{ block.settings.image | image_url: width: 900 }} 900w
                "
                sizes="(max-width: 768px) 100vw, 50vw"
                alt="{{ block.settings.heading | escape }}"
                loading="lazy"
                class="featured-collections__image"
              >
            {% else %}
              <div class="featured-collections__placeholder"></div>
            {% endif %}
            <div class="featured-collections__overlay"></div>
          </div>
          <div class="featured-collections__text" style="text-align: {{ block.settings.text_alignment }};">
            <h3 class="featured-collections__title">{{ block.settings.heading }}</h3>
            {% if block.settings.description != blank %}
              <p class="featured-collections__desc">{{ block.settings.description }}</p>
            {% endif %}
            <span class="featured-collections__link-text">
              {{ block.settings.link_text | default: 'Explore' }}
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                <line x1="5" y1="12" x2="19" y2="12"/><polyline points="12 5 19 12 12 19"/>
              </svg>
            </span>
          </div>
        </a>
      {% endfor %}
    </div>
  </div>
</section>

