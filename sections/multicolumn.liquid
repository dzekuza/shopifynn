<section class="multicolumn section {% if section.settings.color_scheme == 'surface' %}section--surface{% elsif section.settings.color_scheme == 'dark' %}section--dark{% endif %}" style="padding-top: {{ section.settings.padding_top }}px; padding-bottom: {{ section.settings.padding_bottom }}px;">
  <div class="container">
    {% if section.settings.heading != blank or section.settings.subheading != blank %}
      <div class="section__header" style="text-align: {{ section.settings.text_alignment }};">
        {% if section.settings.heading != blank %}
          <h2 class="section__heading" style="font-size: {% if section.settings.heading_size == 'small' %}1.5rem{% elsif section.settings.heading_size == 'large' %}2.75rem{% else %}2rem{% endif %};">{{ section.settings.heading }}</h2>
        {% endif %}
        {% if section.settings.subheading != blank %}
          <p class="section__subheading">{{ section.settings.subheading }}</p>
        {% endif %}
      </div>
    {% endif %}

    <div class="multicolumn__grid multicolumn__grid--{{ section.settings.columns }}" style="gap: {{ section.settings.grid_gap }}px;">
      {% for block in section.blocks %}
        <div class="multicolumn__item" style="text-align: {{ block.settings.text_alignment }};" {{ block.shopify_attributes }}>
          {% if block.settings.video != blank %}
            <div class="multicolumn__image-wrap">
              <video class="multicolumn__video" autoplay muted loop playsinline style="width: 100%; display: block; object-fit: {{ block.settings.video_fit }};">
                {% for source in block.settings.video.sources %}
                  <source src="{{ source.url }}" type="{{ source.mime_type }}">
                {% endfor %}
              </video>
            </div>
          {% elsif block.settings.image %}
            <div class="multicolumn__image-wrap {% if section.settings.image_ratio == 'circle' %}multicolumn__image-wrap--circle{% endif %}">
              <img
                src="{{ block.settings.image | image_url: width: 540 }}"
                alt="{{ block.settings.heading | escape | default: 'Column image' }}"
                loading="lazy"
                class="multicolumn__image"
              >
            </div>
          {% endif %}

          {% if block.settings.heading != blank %}
            <h3 class="multicolumn__heading" style="font-size: {% if section.settings.text_size == 'small' %}1rem{% elsif section.settings.text_size == 'large' %}1.5rem{% else %}1.25rem{% endif %};">{{ block.settings.heading }}</h3>
          {% endif %}

          {% if block.settings.text != blank %}
            <div class="multicolumn__text rte">{{ block.settings.text }}</div>
          {% endif %}

          {% if block.settings.link_text != blank %}
            <a href="{{ block.settings.link_url }}" class="multicolumn__link">
              {{ block.settings.link_text }}
              <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><line x1="5" y1="12" x2="19" y2="12"/><polyline points="12 5 19 12 12 19"/></svg>
            </a>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</section>

