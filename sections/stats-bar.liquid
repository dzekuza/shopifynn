<section class="stats-bar section" style="padding-top: {{ section.settings.padding_top }}px; padding-bottom: {{ section.settings.padding_bottom }}px; background-color: {{ section.settings.background_color }}; color: {{ section.settings.text_color }};">
  <div class="container">
    {% if section.settings.heading != blank %}
      <h2 class="stats-bar__heading" style="text-align: center; color: {{ section.settings.text_color }};">{{ section.settings.heading }}</h2>
    {% endif %}
    <div class="stats-bar__grid stats-bar__grid--{{ section.blocks.size }}">
      {% for block in section.blocks %}
        <div class="stats-bar__item" {{ block.shopify_attributes }}>
          <span class="stats-bar__number" style="color: {{ section.settings.accent_color }};">{{ block.settings.number }}</span>
          <span class="stats-bar__label">{{ block.settings.label }}</span>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Stats Bar",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#1A2332"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "accent_color",
      "label": "Number color",
      "default": "#5EC2AA"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Top padding",
      "min": 0,
      "max": 100,
      "step": 4,
      "default": 48,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Bottom padding",
      "min": 0,
      "max": 100,
      "step": 4,
      "default": 48,
      "unit": "px"
    }
  ],
  "blocks": [
    {
      "type": "stat",
      "name": "Statistic",
      "settings": [
        { "type": "text", "id": "number", "label": "Number / Value", "default": "500+" },
        { "type": "text", "id": "label", "label": "Label", "default": "Happy Customers" }
      ]
    }
  ],
  "presets": [
    {
      "name": "Stats Bar",
      "blocks": [
        { "type": "stat", "settings": { "number": "500+", "label": "Happy Customers" } },
        { "type": "stat", "settings": { "number": "10", "label": "Year Warranty" } },
        { "type": "stat", "settings": { "number": "15+", "label": "Countries Shipped" } },
        { "type": "stat", "settings": { "number": "100%", "label": "Handcrafted" } }
      ]
    }
  ]
}
{% endschema %}
