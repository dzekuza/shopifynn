      "options": [
        { "value": "small", "label": "Small" },
        { "value": "medium", "label": "Medium" },
        { "value": "large", "label": "Large" }
      ],
      "default": "medium"
    },
    {
      "type": "select",
      "id": "heading_size_mobile",
      "label": "Heading size (mobile)",
      "options": [
        { "value": "small", "label": "Small" },
        { "value": "medium", "label": "Medium" },
        { "value": "large", "label": "Large" }
      ],
      "default": "medium"
    },
    {
      "type": "select",
      "id": "text_size",
      "label": "Quote text size",
      "options": [
        { "value": "small", "label": "Small" },
        { "value": "medium", "label": "Medium" },
        { "value": "large", "label": "Large" }
      ],
      "default": "medium"
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "select",
      "id": "layout",
      "label": "Layout style",
      "options": [
        { "value": "carousel", "label": "Carousel" },
        { "value": "expanding_cards", "label": "Expanding Cards" }
      ],
      "default": "carousel"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text alignment",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" }
      ],
      "default": "left"
    },
    {
      "type": "select",
      "id": "color_scheme",
      "label": "Color scheme",
      "options": [
        { "value": "default", "label": "Default" },
        { "value": "surface", "label": "Surface" },
        { "value": "dark", "label": "Dark" }
      ],
      "default": "default"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Top padding",
      "min": 0,
      "max": 100,
      "step": 4,
      "default": 40,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Bottom padding",
      "min": 0,
      "max": 100,
      "step": 4,
      "default": 40,
      "unit": "px"
    }
  ],
  "blocks": [
    {
      "type": "testimonial",
      "name": "Testimonial",
      "limit": 8,
      "settings": [
        {
          "type": "textarea",
          "id": "quote",
          "label": "Quote",
          "default": "The best investment we've made for our home. The quality is outstanding."
        },
        {
          "type": "text",
          "id": "name",
          "label": "Customer name",
          "default": "Anna S."
        },
        {
          "type": "text",
          "id": "location",
          "label": "Location",
          "default": "Stockholm, Sweden"
        },
        {
          "type": "image_picker",
          "id": "avatar",
          "label": "Customer photo",
          "info": "Optional avatar image"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Champion image",
          "info": "Full background image for expanding cards layout"
        },
        {
          "type": "range",
          "id": "rating",
          "min": 1,
          "max": 5,
          "step": 1,
          "default": 5,
          "label": "Star rating"
        },
        {
          "type": "select",
          "id": "text_alignment",
          "label": "Text alignment",
          "options": [
            { "value": "left", "label": "Left" },
            { "value": "center", "label": "Center" }
          ],
          "default": "left"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Testimonials",
      "blocks": [
        {
          "type": "testimonial",
          "settings": {
            "quote": "The best investment we've made for our home. The craftsmanship is simply outstanding and the whole family enjoys it year-round.",
            "name": "Anna S.",
            "location": "Stockholm, Sweden",
            "rating": 5
          }
        },
        {
          "type": "testimonial",
          "settings": {
            "quote": "From ordering to delivery, the experience was seamless. The tub looks even better in person than on the website.",
            "name": "Marc D.",
            "location": "Munich, Germany",
            "rating": 5
          }
        },
        {
          "type": "testimonial",
          "settings": {
            "quote": "We use the cold tub every morning. It has completely transformed our wellness routine. Exceptional quality.",
            "name": "Elise R.",
            "location": "Oslo, Norway",
            "rating": 5
          }
        }
      ]
    }
  ]
}
