<section class="testimonials section">
  <div class="container">
    {% if section.settings.heading != blank %}
      <div class="section__header">
        <h2 class="section__heading">{{ section.settings.heading }}</h2>
        {% if section.settings.subheading != blank %}
          <p class="section__subheading">{{ section.settings.subheading }}</p>
        {% endif %}
      </div>
    {% endif %}

    <div class="testimonials__track" data-testimonials>
      <div class="testimonials__slider" data-testimonials-slider>
        {% for block in section.blocks %}
          <div class="testimonials__card" {{ block.shopify_attributes }}>
            <div class="testimonials__stars">
              {% for i in (1..block.settings.rating) %}
                <svg width="18" height="18" viewBox="0 0 24 24" fill="var(--color-accent)" stroke="var(--color-accent)" stroke-width="1">
                  <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"/>
                </svg>
              {% endfor %}
            </div>
            <blockquote class="testimonials__quote">
              {{ block.settings.quote }}
            </blockquote>
            <div class="testimonials__author">
              <span class="testimonials__name">{{ block.settings.name }}</span>
              {% if block.settings.location != blank %}
                <span class="testimonials__location">{{ block.settings.location }}</span>
              {% endif %}
            </div>
          </div>
        {% endfor %}
      </div>
    </div>

    {% if section.blocks.size > 3 %}
      <div class="testimonials__nav">
        <button class="testimonials__prev" data-testimonials-prev aria-label="Previous testimonial">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
            <polyline points="15 18 9 12 15 6"/>
          </svg>
        </button>
        <button class="testimonials__next" data-testimonials-next aria-label="Next testimonial">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
            <polyline points="9 18 15 12 9 6"/>
          </svg>
        </button>
      </div>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Testimonials",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "What Our Customers Say"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Join thousands of happy Aurowe owners across Europe."
    }
  ],
  "blocks": [
    {
      "type": "testimonial",
      "name": "Testimonial",
      "limit": 8,
      "settings": [
        {
          "type": "textarea",
          "id": "quote",
          "label": "Quote",
          "default": "The best investment we've made for our home. The quality is outstanding."
        },
        {
          "type": "text",
          "id": "name",
          "label": "Customer name",
          "default": "Anna S."
        },
        {
          "type": "text",
          "id": "location",
          "label": "Location",
          "default": "Stockholm, Sweden"
        },
        {
          "type": "range",
          "id": "rating",
          "min": 1,
          "max": 5,
          "step": 1,
          "default": 5,
          "label": "Star rating"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Testimonials",
      "blocks": [
        {
          "type": "testimonial",
          "settings": {
            "quote": "The best investment we've made for our home. The craftsmanship is simply outstanding and the whole family enjoys it year-round.",
            "name": "Anna S.",
            "location": "Stockholm, Sweden",
            "rating": 5
          }
        },
        {
          "type": "testimonial",
          "settings": {
            "quote": "From ordering to delivery, the experience was seamless. The tub looks even better in person than on the website.",
            "name": "Marc D.",
            "location": "Munich, Germany",
            "rating": 5
          }
        },
        {
          "type": "testimonial",
          "settings": {
            "quote": "We use the cold tub every morning. It has completely transformed our wellness routine. Exceptional quality.",
            "name": "Elise R.",
            "location": "Oslo, Norway",
            "rating": 5
          }
        }
      ]
    }
  ]
}
{% endschema %}
