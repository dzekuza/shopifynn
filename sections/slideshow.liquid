<section class="slideshow" data-slideshow style="padding-top: {{ section.settings.padding_top }}px; padding-bottom: {{ section.settings.padding_bottom }}px;">
  <div class="slideshow__wrapper" style="min-height: {{ section.settings.slide_height }}px;">
    {% for block in section.blocks %}
      <div class="slideshow__slide {% if forloop.first %}slideshow__slide--active{% endif %}" data-slide="{{ forloop.index0 }}" {{ block.shopify_attributes }}>
        <div class="slideshow__media">
          {% if block.settings.image %}
            <img
              src="{{ block.settings.image | image_url: width: 1920 }}"
              srcset="
                {{ block.settings.image | image_url: width: 768 }} 768w,
                {{ block.settings.image | image_url: width: 1200 }} 1200w,
                {{ block.settings.image | image_url: width: 1920 }} 1920w
              "
              sizes="100vw"
              alt="{{ block.settings.heading | escape | default: 'Slide image' }}"
              loading="{% if forloop.first %}eager{% else %}lazy{% endif %}"
              class="slideshow__image"
            >
          {% else %}
            <div class="slideshow__placeholder"></div>
          {% endif %}
          <div class="slideshow__overlay" style="opacity: {{ block.settings.overlay_opacity | divided_by: 100.0 }};"></div>
        </div>

        <div class="slideshow__content slideshow__content--{{ block.settings.text_position }}">
          <div class="container" style="max-width: {{ block.settings.content_width }}px;">
            {% if block.settings.subtitle != blank %}
              <p class="slideshow__subtitle">{{ block.settings.subtitle }}</p>
            {% endif %}
            {% if block.settings.heading != blank %}
              <h2 class="slideshow__heading" style="font-size: {% if block.settings.heading_size == 'small' %}1.75rem{% elsif block.settings.heading_size == 'large' %}3rem{% elsif block.settings.heading_size == 'extra_large' %}4rem{% else %}2.25rem{% endif %};">{{ block.settings.heading }}</h2>
            {% endif %}
            {% if block.settings.text != blank %}
              <p class="slideshow__text">{{ block.settings.text }}</p>
            {% endif %}
            {% if block.settings.button_text != blank %}
              <a href="{{ block.settings.button_url }}" class="button {% if block.settings.button_style == 'outline' %}button--outline{% else %}button--primary{% endif %} slideshow__button">
                {{ block.settings.button_text }}
              </a>
            {% endif %}
          </div>
        </div>
      </div>
    {% endfor %}
  </div>

  {% if section.blocks.size > 1 %}
    <div class="slideshow__nav">
      <button class="slideshow__nav-btn" data-slideshow-prev aria-label="Previous slide">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="15 18 9 12 15 6"/></svg>
      </button>
      <div class="slideshow__dots">
        {% for block in section.blocks %}
          <button class="slideshow__dot {% if forloop.first %}slideshow__dot--active{% endif %}" data-slideshow-dot="{{ forloop.index0 }}" aria-label="Go to slide {{ forloop.index }}"></button>
        {% endfor %}
      </div>
      <button class="slideshow__nav-btn" data-slideshow-next aria-label="Next slide">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="9 18 15 12 9 6"/></svg>
      </button>
    </div>
  {% endif %}
</section>

{% schema %}
{
  "name": "Slideshow",
  "settings": [
    {
      "type": "header",
      "content": "Slideshow"
    },
    {
      "type": "checkbox",
      "id": "autoplay",
      "label": "Auto-rotate slides",
      "default": true
    },
    {
      "type": "range",
      "id": "autoplay_speed",
      "label": "Change slides every",
      "min": 3,
      "max": 10,
      "step": 1,
      "default": 5,
      "unit": "sec"
    },
    {
      "type": "range",
      "id": "slide_height",
      "label": "Slide height",
      "min": 300,
      "max": 800,
      "step": 50,
      "default": 500,
      "unit": "px"
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Top padding",
      "min": 0,
      "max": 100,
      "step": 4,
      "default": 0,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Bottom padding",
      "min": 0,
      "max": 100,
      "step": 4,
      "default": 0,
      "unit": "px"
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "limit": 6,
      "settings": [
        {
          "type": "header",
          "content": "Media"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Background image"
        },
        {
          "type": "range",
          "id": "overlay_opacity",
          "label": "Overlay opacity",
          "min": 0,
          "max": 80,
          "step": 5,
          "default": 30,
          "unit": "%"
        },
        {
          "type": "header",
          "content": "Content"
        },
        {
          "type": "text",
          "id": "subtitle",
          "label": "Subtitle"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Slide heading"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Description"
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button text",
          "default": "Shop Now"
        },
        {
          "type": "url",
          "id": "button_url",
          "label": "Button link"
        },
        {
          "type": "select",
          "id": "button_style",
          "label": "Button style",
          "options": [
            { "value": "primary", "label": "Primary (filled)" },
            { "value": "outline", "label": "Outline" }
          ],
          "default": "primary"
        },
        {
          "type": "header",
          "content": "Typography & Layout"
        },
        {
          "type": "select",
          "id": "heading_size",
          "label": "Heading size",
          "options": [
            { "value": "small", "label": "Small" },
            { "value": "medium", "label": "Medium" },
            { "value": "large", "label": "Large" },
            { "value": "extra_large", "label": "Extra large" }
          ],
          "default": "medium"
        },
        {
          "type": "select",
          "id": "text_position",
          "label": "Text position",
          "options": [
            { "value": "left", "label": "Left" },
            { "value": "center", "label": "Center" },
            { "value": "right", "label": "Right" }
          ],
          "default": "center"
        },
        {
          "type": "range",
          "id": "content_width",
          "label": "Content width",
          "min": 400,
          "max": 1200,
          "step": 50,
          "default": 800,
          "unit": "px"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Slideshow",
      "blocks": [
        {
          "type": "slide",
          "settings": {
            "heading": "Nordic Bathing Tradition",
            "text": "Experience the art of Scandinavian relaxation",
            "button_text": "Explore Collection"
          }
        },
        {
          "type": "slide",
          "settings": {
            "heading": "Handcrafted Excellence",
            "text": "Each tub built with care by master craftsmen",
            "button_text": "Learn More"
          }
        }
      ]
    }
  ]
}
{% endschema %}
