<section class="page-content section">
  <div class="container">
    <div class="page-content__inner" style="max-width: {{ section.settings.content_width }}px; margin: 0 auto;">
      {% if section.settings.show_title %}
        <h1 class="page-content__title">{{ page.title }}</h1>
      {% endif %}

      <div class="page-content__body rte">
        {{ page.content }}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Page Content",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_title",
      "label": "Show page title",
      "default": true
    },
    {
      "type": "range",
      "id": "content_width",
      "label": "Content width",
      "min": 600,
      "max": 1280,
      "step": 40,
      "default": 800,
      "unit": "px"
    }
  ]
}
{% endschema %}
