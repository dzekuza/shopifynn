<section class="collection-list section {% if section.settings.color_scheme == 'surface' %}section--surface{% elsif section.settings.color_scheme == 'dark' %}section--dark{% endif %}" style="padding-top: {{ section.settings.padding_top }}px; padding-bottom: {{ section.settings.padding_bottom }}px;">
  <div class="container">
    {% if section.settings.heading != blank or section.settings.subheading != blank %}
      <div class="section__header" style="text-align: {{ section.settings.text_alignment }};">
        {% if section.settings.heading != blank %}
          <h2 class="section__heading" style="font-size: {% if section.settings.heading_size == 'small' %}1.5rem{% elsif section.settings.heading_size == 'large' %}2.75rem{% else %}2rem{% endif %};">{{ section.settings.heading }}</h2>
        {% endif %}
        {% if section.settings.subheading != blank %}
          <p class="section__subheading" style="font-size: {% if section.settings.text_size == 'small' %}0.875rem{% elsif section.settings.text_size == 'large' %}1.25rem{% else %}1rem{% endif %};">{{ section.settings.subheading }}</p>
        {% endif %}
      </div>
    {% endif %}

    <div class="collection-list__grid collection-list__grid--{{ section.settings.columns }}" style="gap: {{ section.settings.grid_gap }}px;">
      {% for block in section.blocks %}
        {% assign collection = collections[block.settings.collection] %}
        <a href="{% if collection %}{{ collection.url }}{% else %}#{% endif %}" class="collection-list__card" {{ block.shopify_attributes }}>
          <div class="collection-list__image-wrap">
            {% if block.settings.video != blank %}
              <video class="collection-list__image" autoplay muted loop playsinline style="width: 100%; height: 100%; object-fit: {{ block.settings.video_fit }};">
                {% for source in block.settings.video.sources %}
                  <source src="{{ source.url }}" type="{{ source.mime_type }}">
                {% endfor %}
              </video>
            {% elsif block.settings.image %}
              <img
                src="{{ block.settings.image | image_url: width: 600 }}"
                srcset="
                  {{ block.settings.image | image_url: width: 400 }} 400w,
                  {{ block.settings.image | image_url: width: 600 }} 600w
                "
                sizes="(max-width: 768px) 100vw, 33vw"
                alt="{{ collection.title | default: block.settings.title | escape }}"
                loading="lazy"
                class="collection-list__image"
              >
            {% elsif collection and collection.image %}
              <img
                src="{{ collection.image | image_url: width: 600 }}"
                srcset="
                  {{ collection.image | image_url: width: 400 }} 400w,
                  {{ collection.image | image_url: width: 600 }} 600w
                "
                sizes="(max-width: 768px) 100vw, 33vw"
                alt="{{ collection.title | escape }}"
                loading="lazy"
                class="collection-list__image"
              >
            {% else %}
              <div class="collection-list__placeholder"></div>
            {% endif %}
            <div class="collection-list__overlay"></div>
          </div>

          <div class="collection-list__info">
            <h3 class="collection-list__title">
              {{ block.settings.title | default: collection.title | default: 'Collection' }}
            </h3>
            {% if section.settings.show_count and collection %}
              <p class="collection-list__count">{{ collection.products_count }} products</p>
            {% endif %}
          </div>
        </a>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Collection List",
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Our Collections"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading"
    },
    {
      "type": "checkbox",
      "id": "show_count",
      "label": "Show product count",
      "default": true
    },
    {
      "type": "header",
      "content": "Typography"
    },
    {
      "type": "select",
      "id": "heading_size",
      "label": "Heading size",
      "options": [
        { "value": "small", "label": "Small" },
        { "value": "medium", "label": "Medium" },
        { "value": "large", "label": "Large" }
      ],
      "default": "medium"
    },
    {
      "type": "select",
      "id": "text_size",
      "label": "Text size",
      "options": [
        { "value": "small", "label": "Small" },
        { "value": "medium", "label": "Medium" },
        { "value": "large", "label": "Large" }
      ],
      "default": "medium"
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text alignment",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" }
      ],
      "default": "left"
    },
    {
      "type": "select",
      "id": "columns",
      "label": "Columns",
      "options": [
        { "value": "2", "label": "2" },
        { "value": "3", "label": "3" },
        { "value": "4", "label": "4" }
      ],
      "default": "3"
    },
    {
      "type": "range",
      "id": "grid_gap",
      "label": "Grid gap",
      "min": 8,
      "max": 40,
      "step": 4,
      "default": 24,
      "unit": "px"
    },
    {
      "type": "select",
      "id": "color_scheme",
      "label": "Color scheme",
      "options": [
        { "value": "default", "label": "Default" },
        { "value": "surface", "label": "Surface" },
        { "value": "dark", "label": "Dark" }
      ],
      "default": "default"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Top padding",
      "min": 0,
      "max": 100,
      "step": 4,
      "default": 40,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Bottom padding",
      "min": 0,
      "max": 100,
      "step": 4,
      "default": 40,
      "unit": "px"
    }
  ],
  "blocks": [
    {
      "type": "collection_card",
      "name": "Collection",
      "limit": 8,
      "settings": [
        {
          "type": "collection",
          "id": "collection",
          "label": "Collection"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Custom title",
          "info": "Leave blank to use collection title"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Custom image",
          "info": "Leave blank to use collection image"
        },
        {
          "type": "video",
          "id": "video",
          "label": "Video (optional)",
          "info": "Select a hosted video from Files. Replaces image if set."
        },
        {
          "type": "select",
          "id": "video_fit",
          "label": "Video fit",
          "options": [
            { "value": "cover", "label": "Cover" },
            { "value": "contain", "label": "Contain" },
            { "value": "fill", "label": "Fill" }
          ],
          "default": "cover",
          "info": "How the video fills its container"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Collection List",
      "blocks": [
        { "type": "collection_card" },
        { "type": "collection_card" },
        { "type": "collection_card" }
      ]
    }
  ]
}
{% endschema %}
