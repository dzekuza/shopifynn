<section class="gallery section section--surface">
  <div class="container">
    {% if section.settings.heading != blank %}
      <div class="section__header">
        <h2 class="section__heading">{{ section.settings.heading }}</h2>
        {% if section.settings.subheading != blank %}
          <p class="section__subheading">{{ section.settings.subheading }}</p>
        {% endif %}
      </div>
    {% endif %}

    <div class="gallery__grid">
      {% for block in section.blocks %}
        <div class="gallery__item gallery__item--{{ block.settings.size }}" {{ block.shopify_attributes }}>
          {% if block.settings.image %}
            <img
              src="{{ block.settings.image | image_url: width: 800 }}"
              srcset="
                {{ block.settings.image | image_url: width: 400 }} 400w,
                {{ block.settings.image | image_url: width: 600 }} 600w,
                {{ block.settings.image | image_url: width: 800 }} 800w
              "
              sizes="(max-width: 768px) 100vw, 33vw"
              alt="{{ block.settings.alt | default: section.settings.heading | escape }}"
              loading="lazy"
              class="gallery__image"
            >
          {% else %}
            <div class="gallery__placeholder"></div>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Lifestyle Gallery",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Life with Aurowe"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "See how our tubs transform outdoor living spaces."
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Gallery Image",
      "limit": 6,
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "alt",
          "label": "Alt text"
        },
        {
          "type": "select",
          "id": "size",
          "label": "Size",
          "options": [
            { "value": "small", "label": "Small" },
            { "value": "medium", "label": "Medium" },
            { "value": "large", "label": "Large" }
          ],
          "default": "medium"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Lifestyle Gallery",
      "blocks": [
        { "type": "image", "settings": { "size": "large" } },
        { "type": "image", "settings": { "size": "small" } },
        { "type": "image", "settings": { "size": "small" } },
        { "type": "image", "settings": { "size": "small" } },
        { "type": "image", "settings": { "size": "small" } },
        { "type": "image", "settings": { "size": "large" } }
      ]
    }
  ]
}
{% endschema %}
