<section class="image-text section {% if section.settings.color_scheme == 'surface' %}section--surface{% elsif section.settings.color_scheme == 'dark' %}section--dark{% endif %}">
  <div class="container">
    <div class="image-text__grid {% if section.settings.layout == 'image_right' %}image-text__grid--reversed{% endif %}">
      <div class="image-text__media">
        {% if section.settings.image %}
          <img
            src="{{ section.settings.image | image_url: width: 720 }}"
            srcset="
              {{ section.settings.image | image_url: width: 400 }} 400w,
              {{ section.settings.image | image_url: width: 600 }} 600w,
              {{ section.settings.image | image_url: width: 720 }} 720w
            "
            sizes="(max-width: 768px) 100vw, 50vw"
            alt="{{ section.settings.image_alt | escape | default: section.settings.heading }}"
            loading="lazy"
            class="image-text__image"
          >
        {% else %}
          <div class="image-text__placeholder">
            <svg width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="var(--color-text-muted)" stroke-width="1">
              <rect x="3" y="3" width="18" height="18" rx="2"/><circle cx="8.5" cy="8.5" r="1.5"/><polyline points="21 15 16 10 5 21"/>
            </svg>
          </div>
        {% endif %}
      </div>

      <div class="image-text__content">
        {% if section.settings.subtitle != blank %}
          <p class="image-text__subtitle">{{ section.settings.subtitle }}</p>
        {% endif %}

        {% if section.settings.heading != blank %}
          <h2 class="image-text__heading">{{ section.settings.heading }}</h2>
        {% endif %}

        {% if section.settings.text != blank %}
          <div class="image-text__text rte">
            {{ section.settings.text }}
          </div>
        {% endif %}

        {% if section.settings.button_text != blank %}
          <a href="{{ section.settings.button_url }}" class="button {% if section.settings.color_scheme == 'dark' %}button--outline{% else %}button--primary{% endif %}">
            {{ section.settings.button_text }}
          </a>
        {% endif %}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Image with Text",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "image_alt",
      "label": "Image alt text"
    },
    {
      "type": "select",
      "id": "layout",
      "label": "Image position",
      "options": [
        { "value": "image_left", "label": "Image left" },
        { "value": "image_right", "label": "Image right" }
      ],
      "default": "image_left"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Our Story"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Crafted with Nordic Tradition"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Text",
      "default": "<p>Every Aurowe tub begins with responsibly sourced Nordic timber and is finished by hand using techniques passed down through generations of Scandinavian craftsmen.</p>"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text",
      "default": "Learn More"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button link"
    },
    {
      "type": "select",
      "id": "color_scheme",
      "label": "Color scheme",
      "options": [
        { "value": "default", "label": "Default" },
        { "value": "surface", "label": "Surface" },
        { "value": "dark", "label": "Dark" }
      ],
      "default": "default"
    }
  ],
  "presets": [
    {
      "name": "Image with Text"
    }
  ]
}
{% endschema %}
